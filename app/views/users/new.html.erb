<% provide(:title, 'Sign up') %>
<h1>New to E-LEARNING? Sign Up</h1>
<div class= "col-md-4 col-md-offset-4">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :email %>
    <%= f.text_field :email%>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <div class="checkbox pull-left">
      <label><input type="checkbox"><div class="span1">Remember me</div></label>
    </div>

    <%= f.submit "Create my account", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
  <% end %>
</div>
